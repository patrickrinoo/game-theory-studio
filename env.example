# Production Environment Variables Template
# Copy this file to .env.local and fill in your values

# Application Configuration
NEXT_PUBLIC_APP_NAME="Monte Carlo Game Theory Studio"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Error Tracking (Optional)
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Performance Monitoring (Optional)
NEXT_PUBLIC_VERCEL_SPEED_INSIGHTS=""

# Database (if needed in future)
# DATABASE_URL=""

# Security
NEXTAUTH_SECRET=""
NEXTAUTH_URL=""

# Feature Flags
NEXT_PUBLIC_ENABLE_ADVANCED_FEATURES="true"
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES="false"

# Deployment Environment
NEXT_PUBLIC_ENVIRONMENT="production"
NODE_ENV="production"

# CDN Configuration (if using custom CDN)
NEXT_PUBLIC_CDN_URL=""

# API Keys (if external services are added)
# EXTERNAL_API_KEY=""

# Rate Limiting
NEXT_PUBLIC_MAX_SIMULATIONS_PER_MINUTE="10"
NEXT_PUBLIC_MAX_ITERATIONS_PER_SIMULATION="100000" 